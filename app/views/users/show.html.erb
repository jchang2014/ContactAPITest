<div class="row">
	<div class="col-xs-12"><h1 class="text-center">User Results</h1></div>
</div>

<div class="row">
	<div class="col-xs-12">
		<table class="table-bordered text-center">
			<thead>
				<tr>
					<th class="col-xs-1 text-center">API used</th>
					<th class="col-xs-1 text-center">Name</th>
					<th class="col-xs-1 text-center">LinkedIn</th>
					<th class="col-xs-3 text-center">Avatar</th>
					<th class="col-xs-2 text-center">Company</th>
					<th class="col-xs-2 text-center">Title</th>
					<th class="col-xs-2 text-center">Tags</th>
				</tr>
			</thead>

			<tbody>
				<% @user.profiles.each do |profile| %>
					<%= render partial: 'profile_row', locals: {profile: profile} %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 text-center">
		<a class="btn btn-default" href="/" role="button">Back</a>
	</div>
</div>