<div class="row">
	<div class="col-md-12"><h1 class="text-center">User Results</h1></div>
</div>

<div class="row">
	<div class="col-md-12 col-md-offset-1">
		<table class="table-bordered text-center">
			<thead>
				<tr>
					<td>API used</td>
					<td>Name</td>
					<td>Avatar</td>
					<td>Company</td>
					<td>Title</td>
					<td>Tags</td>
				</tr>
			</thead>

			<tbody>
				<% @user.profiles.each do |profile| %>
					<%= render partial: 'profile_row', locals: {profile: profile} %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-12 text-center">
		<a class="btn btn-default" href="/" role="button">Back</a>
	</div>
</div>