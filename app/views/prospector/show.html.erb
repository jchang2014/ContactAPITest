<div class="row">
	<div class="col-xs-12"><h1>Prospector Results</h1></div>
</div>

<div class="row">
	<div class="col-xs-12">
		<table class="table-bordered text-center">
			<thead>
				<tr>
					<th class="text-center">Name</th>
					<th class="text-center">Email</th>
					<th class="text-center">Title</th>
				</tr>
			</thead>
			<tbody>
				<% @people.each do |person| %>
					<%= render partial: "person_row", locals: {person: person}%>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<%=@people%>
	</div>
</div>

